    "    N = input()\n",
    "    if N == '0':\n",
    "        break\n",
    "    else:\n",
    "        inner_space = len(N) - 1\n",
    "        left_right_space = 2\n",
    "        total_length = left_right_space + inner_space + sum([2 if ch == '1' else 4 if ch == '0' else 3 for ch in N])\n",
    "        print(total_length)"
   ]
